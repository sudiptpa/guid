{
  "name": "sudiptpa/guid",
  "type": "library",
  "description": "A minimal GUID generator package for PHP.",
  "homepage": "https://github.com/sudiptpa/guid",
  "keywords": [
    "guid",
    "uuid",
    "identifier",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "email": "sudiptpa@gmail.com",
      "homepage": "https://sujipthapa.co",
      "name": "Sujip Thapa",
      "role": "Web Developer"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^11.5"
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Sujip\\Guid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sujip\\Guid\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "stan": "phpstan analyse --configuration=phpstan.neon --no-progress --debug",
    "lint": "php-cs-fixer fix --dry-run --diff --sequential --config=.php-cs-fixer.dist.php",
    "lint:fix": "php-cs-fixer fix --sequential --config=.php-cs-fixer.dist.php"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0.x-dev"
    }
  },
  "support": {
    "issues": "https://github.com/sudiptpa/guid/issues",
    "rss": "https://github.com/sudiptpa/guid/releases.atom",
    "source": "https://github.com/sudiptpa/guid"
  }
}
